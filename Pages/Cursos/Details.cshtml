@page "{id:int?}" 
@model Universidad.Pages_Cursos.DetailsModel

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso.id_curso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.id_curso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso.titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso.creditos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.creditos)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Id_Estudiantes inscritos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Curso.Inscripciones) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_estudiante)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Curso?.id_curso">Editar</a> |
    <a asp-page="./Index">Volver a la lista</a>
</div>
