@page
@model Universidad.Pages_Inscripciones.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Inscripcion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inscripcion.id_inscripcion" />
            <div class="form-group">
                <label asp-for="Inscripcion.id_curso" class="control-label"></label>
                <select asp-for="Inscripcion.id_curso" class="form-control" asp-items="ViewBag.id_curso"></select>
                <span asp-validation-for="Inscripcion.id_curso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inscripcion.id_estudiante" class="control-label"></label>
                <select asp-for="Inscripcion.id_estudiante" class="form-control" asp-items="ViewBag.id_estudiante"></select>
                <span asp-validation-for="Inscripcion.id_estudiante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
